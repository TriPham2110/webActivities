{
    "name": "webActivities",
    "description": "An extension to track web activities",
    "homepage_url": "http://chrome.google.com/webstore",
    "version": "1.0.0",
    "version_name": "1.0.0",
    "manifest_version": 3,
    "minimum_chrome_version": "88",
    "permissions": [
        "storage",
        "webNavigation",
        "webRequest",
        "tabs",
        "activeTab",
        "scripting",
        "history",
        "downloads",
        "nativeMessaging",
        "unlimitedStorage",
        "alarms"
    ],
	"host_permissions": [
	  "*://*/*"
	],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_title": "webActivities",
        "default_popup": "popup.html"
    }
}